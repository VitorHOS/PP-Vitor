#include <stdio.h>
#include <stdlib.h>

int main()
{
    char c,d;
    char arq[50];
    int x;
    FILE *p;
    printf("digite o nome do arquivo:");
    fgets(arq,50,stdin);
    for(x = 0;arq[x] != '\0'; x++){
        if(arq[x] == '\n')
             arq[x] = '\0';
    }
    p = fopen(arq,"r");
    if(p == NULL){
        printf("erro.\n");
        exit(1);
        }
    printf("digite um caracter:");
    scanf("%c",&c);
    while(d != -1){
        d = fgetc(p);

    }


    fclose(p);
    return 0;
}
