exercicio  3
#include <stdio.h>
int numero(int num1);

int main()
{
    int num,x;
    printf("digite um numero:");
    scanf("%i",&num);
    x = numero(num);
    printf("%i",x);
    return 0;
}
int numero(int num1)
{
    if(num1==0)
        return 0;
    if(num1>0)
        return 1;
    if(num1<0)
        return -1;
}
exercicio 4
#include <stdio.h>
int quadradoP(int num1);

int main()
{
    int num,x;
    printf("digite um numero:");
    scanf("%i",&num);
    x = quadradoP(num);
    if(x==1)
    printf("e um quadrado perfeito");
    else
        printf("nao e um quadrado perfeito");
    return 0;
}
int quadradoP(int num1)
{
  int b;
  float a;
  a = sqrt(num1);
  b = a*a;
  if(b==num1)
    return 1;
  else
    return 0;
}
exercicio 5
#include <stdio.h>
#define PI 3.1415
float volume(float r);

int main()
{
    float raio,v;
    printf("digite o raio:");
    scanf("%f",&raio);
    v = volume(raio);
    printf("o volume e %f",v);
    return 0;
}
float volume(float r)
{
 float vo;
 vo = (4*PI*(r*r*r))/3;
 return vo;
}
exercicio 6
#include <stdio.h>
int tempo(int h,int m);

int main()
{
    int hora,minuto,segundo,segundost;
    printf("digite\nhoras:");
    scanf("%i",&hora);
    printf("minutos:");
    scanf("%i",&minuto);
    printf("segundos");
    scanf("%i",&segundo);
    segundost = tempo(hora,minuto);
    segundost += segundo;
    printf("%i horas %i minutos %i segundos equivale a %i",hora,minuto,segundo,segundost);
    return 0;
}
int tempo(int h,int m)
{
    h *= 3600;
    m *= 60;
    return h+m;
}
exercicio 7
#include <stdio.h>
float celfah(float C);

int main()
{
    float c,f;
    printf("digite uma temperatura em celcius:");
    scanf("%f",&c);
    f = celfah(c);
    printf("%f celcius em fahrenheit e %f",c,f);
    return 0;
}
float celfah(float C)
{
    float F;
    F = C*1.8+32;
    return F;
}
exercicio 8
#include <stdio.h>
float hipotenusa(float a, float b);

int main()
{
    float ca,cb,h;
    printf("digite o primeiro cateto:");
    scanf("%f",&ca);
    printf("digite o segundo cateto:");
    scanf("%f",&cb);
    h = hipotenusa(ca,cb);
    printf("a hipotenusa e %f",h);
    return 0;
}
float hipotenusa(float a, float b)
{
    return sqrt(a*a+b*b);
} 
exercicio 9
#include <stdio.h>
#define PI 3.1415
float volumecilindro(float r, float a);

int main()
{
    float raio,altura,V;
    printf("digite o raio:");
    scanf("%f",&raio);
    printf("digite a altura:");
    scanf("%f",&altura);
    V = volumecilindro(raio,altura);
    printf("o volume e %f",V);
    return 0;
}
float volumecilindro(float r, float a)
{
    return PI*(r*r)*a;
}
exercicio 10
#include <stdio.h>
float maior(float a, float b);

int main()
{
    float x,y,M;
    printf("digite um numero:");
    scanf("%f",&x);
    printf("digite um numero:");
    scanf("%f",&y);
    M = maior(x,y);
    printf("%f e maior",M);
    return 0;
}
float maior(float a, float b)
{
    if(a>b)
        return a;
    if(b>a)
        return b;
}
