
exerci  3
#include <stdio.h>
int numero(int num1);

int main()
{
    int num,x;
    printf("digite um numero:");
    scanf("%i",&num);
    x = numero(num);
    printf("%i",x);
    return 0;
}
int numero(int num1)
{
    if(num1==0)
        return 0;
    if(num1>0)
        return 1;
    if(num1<0)
        return -1;
}
exercicio 4
#include <stdio.h>
int quadradoP(int num1);

int main()
{
    int num,x;
    printf("digite um numero:");
    scanf("%i",&num);
    x = quadradoP(num);
    if(x==1)
    printf("e um quadrado perfeito");
    else
        printf("nao e um quadrado perfeito");
    return 0;
}
int quadradoP(int num1)
{
  int b;
  float a;
  a = sqrt(num1);
  b = a*a;
  if(b==num1)
    return 1;
  else
    return 0;
}
exercicio 5
#include <stdio.h>
#define PI 3.1415
float volume(float r);

int main()
{
    float raio,v;
    printf("digite o raio:");
    scanf("%f",&raio);
    v = volume(raio);
    printf("o volume e %f",v);
    return 0;
}
float volume(float r)
{
 float vo;
 vo = (4*PI*(r*r*r))/3;
 return vo;
}
