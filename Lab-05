#include <stdio.h>
int numero(int num1);

int main()
{
    int num,x;
    printf("digite um numero:");
    scanf("%i",&num);
    x = numero(num);
    printf("%i",x);
    return 0;
}
int numero(int num1)
{
    if(num1==0)
        return 0;
    if(num1>0)
        return 1;
    if(num1<0)
        return -1;
}
